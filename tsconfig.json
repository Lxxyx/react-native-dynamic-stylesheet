{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "pretty": true,
    "jsx": "react-native",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noUnusedLocals": false
  },
  "include": [
    "src/**/*"
  ]
}
